{
  "private": true,
  "name": "@blog/home",
  "version": "1.0.0",
  "description": "app for blog",
  "main": "index.tsx",
  "repository": "",
  "author": "Kiran Kumar Chaudhary <hellokiran2020@gmail.com>",
  "scripts": {
    "dev": "REACT_APP_STAGE='local' next dev",
    "start": "REACT_APP_STAGE='local' next start",
    "start:dev": "REACT_APP_STAGE='dev' next start",
    "build": "next build",
    "test": "next test --coverage",
    "lint": "eslint src --ext .js,.ts,.tsx",
    "deploy:prod": "yarn build && netlify deploy --site $NETLIFY_SITE_ID --auth $NETLIFY_AUTH_TOKEN --prod"
  },
  "dependencies": {
    "@blog/components": "^1.0.0",
    "@emotion/react": "^11.9.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.8.1",
    "@material-ui/core": "^4.9.10",
    "@material-ui/icons": "^4.0.1",
    "@material-ui/lab": "^4.0.0-alpha.49",
    "@material-ui/styles": "^4.0.1",
    "@material-ui/system": "^4.9.6",
    "@mdx-js/runtime": "^1.6.22",
    "@mui/icons-material": "^5.6.1",
    "@mui/material": "^5.6.1",
    "@next/mdx": "^10.2.3",
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "eslint-plugin-react": "^7.13.0",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.20",
    "next": "10.0.3",
    "next-auth": "^3.1.0",
    "react": "17.0.0",
    "react-dom": "17.0.0",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^11.1.1",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.164",
    "@types/next-auth": "^3.1.21",
    "@types/node": "^13.9.5",
    "@types/ramda": "^0.27.32",
    "@types/react": "^16.9.26",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "next-transpile-modules": "6.0.0",
    "react-app-rewired": "^2.1.6",
    "tslint-react-hooks": "^2.2.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "react-app",
      "plugin:prettier/recommended",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "useJSXTextNode": true,
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "plugins": [
      "prettier",
      "react",
      "@typescript-eslint",
      "react-hooks"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ],
      "key-spacing": [
        1,
        {
          "mode": "strict"
        }
      ],
      "keyword-spacing": [
        1,
        {}
      ],
      "no-multi-spaces": 1,
      "no-irregular-whitespace": 1,
      "react/jsx-closing-bracket-location": 1,
      "react/jsx-equals-spacing": 1,
      "react/jsx-no-undef": 1,
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/no-unused-prop-types": 1,
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "no-unused-vars": "warn",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "@typescript-eslint/member-delimiter-style": "off"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx,",
          "*.js",
          "*.jsx"
        ]
      }
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx}",
      "src/*.{js,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/common/tests/*.js"
    ],
    "coverageReporters": [
      "json-summary",
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "ie >= 9"
    ]
  }
}
